<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ExpenseRateBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/cheap_bar_ratingbar</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>

    <style name="RateProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:minHeight">8dp</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:indeterminate">false</item>
        <item name="android:max">100</item>
        <item name="android:progressDrawable">@drawable/progress_rate_bar</item>
    </style>

    <!-- Buttons -->
    <style name="WhiteColorButton" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.White.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="OrangeColorButton" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Orange.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="ThemeOverlay.White.Button" parent="">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/gray</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="ThemeOverlay.Orange.Button" parent="">
        <item name="colorPrimary">@color/primary_orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:elevation">2dp</item>
    </style>
</resources>